<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pilih_Menu"
    android:background="@color/bg_color"
    >

    <Button
        android:id="@+id/buttonInputNama"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Input Nama"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/bg_btn"
        />


    <Button
        android:id="@+id/buttonKalkulator"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Kalkulator"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/bg_btn"
        app:layout_constraintTop_toBottomOf="@+id/buttonInputNama"
        app:layout_constraintRight_toRightOf="@id/buttonInputNama"
        app:layout_constraintLeft_toLeftOf="@id/buttonInputNama"
        />

    <Button
        android:id="@+id/buttonList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="List"
        android:backgroundTint="@color/bg_btn"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonKalkulator"
        app:layout_constraintLeft_toLeftOf="@id/buttonInputNama"
        app:layout_constraintRight_toRightOf="@id/buttonInputNama"
         />

    <Button
        android:id="@+id/buttonKembali"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"
        android:backgroundTint="@color/bg_btn"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonList"
        app:layout_constraintLeft_toLeftOf="@id/buttonInputNama"
        app:layout_constraintRight_toRightOf="@id/buttonInputNama"
         />
</androidx.constraintlayout.widget.ConstraintLayout>