<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Input_Nama">

    <TextView
        android:id="@+id/labelInputNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Nama Anda "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/inputNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/labelInputNama"
        app:layout_constraintTop_toBottomOf="@id/labelInputNama"
        />



    <Button
        android:id="@+id/buttonTampilkan"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Tampilkan"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/inputNama"
        app:layout_constraintLeft_toLeftOf="@id/labelInputNama"
        />

    <TextView
        android:id="@+id/labelData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Yang Diinputkan : "
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@id/labelInputNama"
        app:layout_constraintTop_toBottomOf="@id/buttonTampilkan"
        />

    <TextView
        android:id="@+id/tampilkanData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelData"
        app:layout_constraintLeft_toLeftOf="@id/labelInputNama"
        />


</androidx.constraintlayout.widget.ConstraintLayout>