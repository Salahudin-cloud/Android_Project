<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Utama"
    android:background="@color/bg_color"
    android:padding="10dp"

    >

    <TextView
        android:id="@+id/judul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugas"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/patrick"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertemuan Ke 5"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:fontFamily="@font/patrick"
        app:layout_constraintRight_toRightOf="@id/judul1"
        app:layout_constraintLeft_toLeftOf="@id/judul1"
        app:layout_constraintTop_toBottomOf="@id/judul1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMasuk"
        android:layout_width="250dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/bg_btn"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttoKeluar"
        android:layout_width="250dp"
        android:padding="15dp"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textColor="@color/bg_btn"
        app:strokeColor="@color/bg_btn"
        app:strokeWidth="5dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/buttonMasuk"
        app:layout_constraintEnd_toEndOf="@id/buttonMasuk"
        app:layout_constraintStart_toStartOf="@id/buttonMasuk"
         />


</androidx.constraintlayout.widget.ConstraintLayout>